@model ApnaKutumbh.Models.Master

@{
    ViewBag.Title = "EnquryReport";
 //   Layout = "~/Views/Shared/WebsiteLayout.cshtml";

    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<section class="section">
    <ul class="breadcrumb breadcrumb-style ">
        <li class="breadcrumb-item">
            <a href="#">
                <i data-feather="home"></i>
            </a>
        </li>    
        <li class="breadcrumb-item">Enquiry Report</li>
    </ul>
</section>

<div class="section-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>Enquiry Report</h4>
                </div>
                <div class="card-body">
                    <div class="row ">
                        <div class="col-sm-1">
                        
                        </div>                    
                    </div>
                 
                    @*<div class="row ">
                        <div class="input-field col-3">
                            <div class="form-group">
                                Booking Number
                                @Html.TextBoxFor(m => m.BookingNumber, new { @class = "form-control", @Placeholder = "Search by Booking Number" })
                            </div>
                        </div>

                        <div class="input-field col m3 s12">
                            <div class="form-group">
                                <br />
                                <input class="btn btn-success pull-left" type="submit" value="Search" id="btnSearch" name="Search" />
                            </div>
                        </div>
                    </div>*@
                    
               
                    <div class="table-responsive">
                        <table class="table table-bordered table-md" data-page-length='50' id="tableExport" style="width:100%;">
                            <thead>
                                <tr>                            
                                    <th>Sr.No</th>
                                    <th>Name </th>
                                    <th>Email ID </th>
                                    <th>Message</th>
                                    <th>Mobile</th>     
                                    <th>Date</th>                            
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                   if (Model.lstEnquiry != null)
                                   {
                                         int i = 1;
                                        foreach (var Item in Model.lstEnquiry)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@Item.Name</td>
                                                <td>@Item.Email</td>
                                                <td>@Item.Message</td>
                                                <td>@Item.Mobile</td>
                                                <td>@Item.AddedOn</td>                                          
                                            </tr>
                                           i++;
                                        }
                                    }
                                }
                            </tbody>
                        </table>                   
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




